{
  "family": "site-task",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "1024",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::170192930815:role/FVMR-fvmr-SITE-RoleService",
  "taskRoleArn": "arn:aws:iam::170192930815:role/FVMR-fvmr-SITE-RoleService",
  "runtimePlatform": {
    "operatingSystemFamily": "LINUX",
    "cpuArchitecture": "X86_64"
  },
  "containerDefinitions": [
    {
      "name": "site",
      "image": "REPLACEME",
      "essential": true,
      "cpu": 256,
      "memory": 1024,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "secrets": [
        {
          "name": "NUXT_OAUTH_GOOGLE_CLIENT_ID",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:170192930815:secret:NUXT_OAUTH_GOOGLE_CLIENT_ID"
        },
        {
          "name": "NUXT_OAUTH_GOOGLE_CLIENT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:170192930815:secret:NUXT_OAUTH_GOOGLE_CLIENT_SECRET"
        },
        {
          "name": "NUXT_SESSION_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:170192930815:secret:NUXT_SESSION_PASSWORD"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/site",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
